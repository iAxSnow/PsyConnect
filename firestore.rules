
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // TEMPORARY DEVELOPMENT RULE: Allow any authenticated user to do anything.
    // This is insecure for production but useful for debugging.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}

service firebase.storage {
  match /b/{bucket}/o {
    
    // TEMPORARY DEVELOPMENT RULE: Allow any authenticated user to read/write any file.
    // This is insecure for production.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
